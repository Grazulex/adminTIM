{% extends sonata_block.templates.block_base %}
 
{% block block %}
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title" data-toggle="collapse" data-target="#list-credit"><i class="fa fa-minus-square"></i> {{ settings.title | trans() }} <span class="badge">{{ nbr }} {{ 'draft' | trans() }}</span> <span class="glyphicon glyphicon-menu-down btn-xs" aria-hidden="true"></span></h3>
        </div>

        <div id="list-credit" class="box-body collapse">
            <div class="row">
                <div class="col-md-12">  
                    <ul>
                        {% for credit in credits %}
                            <li><a class="btn btn-danger btn-xs" href="{{ path('credit_draft_edit', {'id': credit.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> {{ credit.customer.fullname }} | {{ credit.total | craue_currency('EUR', 'fr_BE') }}</li>
                        {% else %}
                                <li>{{ 'No data available.' | trans() }}</li>
                        {% endfor %}
                        {% if nbr > max_item_dashboard %}
                            <li>...</li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="box-footer">                    
            <div class="text-right">
                <a class="btn btn-success btn-sm" title="{{ 'Add' | trans() }}" href="{{ path('credit_draft_create') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
                <a class="btn btn-primary btn-sm" title="{{ 'List draft' | trans() }}" href="{{ path('credit_draft_list') }}"><span class="glyphicon glyphicon-align-center" aria-hidden="true"></span></a>
                <a class="btn btn-default btn-sm" title="{{ 'List open' | trans() }}" href="{{ path('credit_open_list') }}"><span class="glyphicon glyphicon-eur" aria-hidden="true"></span></a>
                <a class="btn btn-info btn-sm" title="{{ 'List close' | trans() }}" href="{{ path('credit_all_list') }}"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span></a>
            </div>
        </div>
    </div>
{% endblock %}