{% extends sonata_block.templates.block_base %}
 
{% block block %}
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title" data-toggle="collapse" data-target="#list-logistic"><i class="fa fa-truck"></i> {{ settings.title | trans() }} <span class="badge">{{ nbr }} {{ 'open' | trans() }}</span> <span class="glyphicon glyphicon-menu-down btn-xs" aria-hidden="true"></span></h3>
        </div>

        <div id="list-logistic" class="box-body collapse">
            <div class="row">
                <div class="col-md-12">  
                    <ul>
                        {% for logistic in logistics %}
                            <li><a class="btn btn-danger btn-xs" href="{{ path('logistic_open_edit', {'id': logistic.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> {{ logistic.created | craue_date }} | {{ logistic.customer.fullname }} | {{ logistic.category.name }}</li>
                        {% else %}
                                <li>{{ 'No data available.' | trans() }}</li>
                        {% endfor %}
                        {% if nbr > max_item_dashboard %}
                            <li>...</li>
                        {% endif %}                        
                    </ul>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <div class="text-right">
                <a class="btn btn-success btn-sm" title="{{ 'Add' | trans() }}" href="{{ path('logistic_open_create') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
                <a class="btn btn-primary btn-sm" title="{{ 'List open' | trans() }}" href="{{ path('logistic_open_list') }}"><span class="glyphicon glyphicon-align-center" aria-hidden="true"></span></a>
                <a class="btn btn-info btn-sm" title="{{ 'List close' | trans() }}" href="{{ path('logistic_close_list') }}"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span></a>
            </div>
        </div>
    </div>
{% endblock %}